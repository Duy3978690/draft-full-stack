    <!-- Main -->
    <main>
        <div class="product-form p-2">
            <h2 class="page-title">Add New Product</h2>
            <form id="productForm" class="mx-auto" style="width: 50%;">
                <label for="productName">Product Name:</label>
                <input type="text" id="productName" required>
                
                <label for="productDesc">Description:</label>
                <textarea id="productDesc" required></textarea>
                
                <label for="productPrice">Price:</label>
                <input type="number" id="productPrice" step="0.01" required placeholder="$">
                <!-- Upload file -->
                <label for="uploadPhoto">Upload Photo:</label>
                <input type="file" id="photoUpload">
            
                <button type="submit" class="btn btn-primary mx-auto m-3 d-flex align-items-center justify-content-center">
                Add Product</button>
                
                
            </form>
        </div>
